      },
      "AuthResponse": {
        "type": "object"
      },
      "VerifyID": {
        "type": "object",
        "properties": {
          "country": {
            "type": "string",
            "example": "gh"
          },
          "type": {
            "type": "string",
            "example": "voter"
          },
          "full_name": {
            "type": "string"
          },
          "id": {
            "type": "string",
            "example": 2000100000
          },
          "is_new_id": {
