            "type": "string"
          },
          "code": {
            "type": "string"
          }
        }
      },
      "VerfiyOTPResponse": {
        "type": "object"
      },
      "DomainResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "CreditProduct": {
        "type": "object",
        "properties": {
          "productId": {
            "type": "integer"
          },
          "productName": {
            "type": "string"
          },
          "productType": {
            "type": "integer"
          },
          "domainName": {
            "type": "string"
          },
          "domainId": {
            "type": "string"
          }
        }
      },
      "CreditProductRequest": {
        "type": "object",
        "properties": {
          "productId": {
            "type": "integer"
          },
          "amount": {
            "type": "string"
          }
        }
      },
      "ActionLoanRequest": {
        "type": "object",
        "properties": {
          "note": {
            "type": "string"
          },
          "action": {
            "type": "string"
          }
        }
      },
